                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonPageBack" TargetType="{x:Type Button}">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Image Name="buttonImage"
                               Height="Auto"
                               HorizontalAlignment="Right"
                               Margin="1"
                               Source="..\..\..\Assets\Button\back.png"
                               Stretch="Fill"
                               VerticalAlignment="Stretch"
                               Width="{Binding Path=Height, RelativeSource={RelativeSource Mode=Self}}">
                            <Image.Effect>
                                <DropShadowEffect  Direction="290" Opacity="0.6" ShadowDepth="1" Color="LightGray"/>
                            </Image.Effect>
                        </Image>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonImage"
                                        Property="Source"
                                        Value="..\..\..\Assets\Button\backclick.png"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalGridLinesBrush" Value="White"/>
            <Setter Property="HorizontalGridLinesBrush" Value="White"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
        </Style>
        <Style TargetType="{x:Type DataGridCell}">

            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#FF4DB6AC"/>

            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="left"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="white" />
            <Setter Property="Foreground" Value="#FF303030"/>


            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                           Value="True">
                    <Setter Property="Background"
                               Value="LightGray" />

                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ColumnElementStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="buttonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="SteelBlue" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Width" Value="auto" />
            <Setter Property="Height" Value="auto" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">

                    <Setter Property="Background" Value="DimGray" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextboxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Gainsboro"/>

        </Style>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="#FFA4A4A4"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="PagebuttonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="SteelBlue"/>
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Width" Value="auto" />
            <Setter Property="Height" Value="auto" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">

                    <Setter Property="Background" Value="Gainsboro" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>
    <Border Background="white" BorderBrush="Gainsboro" BorderThickness="1" CornerRadius="15">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="12.5*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">


                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Viewbox HorizontalAlignment="Left">
                        <TextBlock Padding="10,0,0,0" Text="Add Task" Margin="5" Foreground="DimGray"/>

                    </Viewbox>

                </Grid>
                <Grid Grid.Column="1">
                    <Viewbox Margin="15">
                        <Button x:Name="btnBack" Style="{StaticResource ButtonBack}"/>
                    </Viewbox>

                </Grid>




            </Grid>

            <Grid Grid.Row="1" Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="30,0,10,0">
                    <Grid.ColumnDefinitions>                    
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="5*"/>   
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".2*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>

                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Label Foreground="DimGray"  Content="Employee ID" VerticalAlignment="Center" />
                            <Label Foreground="DimGray"  Content="Task ID" Visibility="Hidden" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Label Foreground="DimGray" Content="Incident ID *" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Label Foreground="DimGray" Content="Incident Description *" VerticalAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Row="5">
                            <Label Foreground="DimGray" Content="Effort Estimate (hrs)" x:Name="EffortEstimate" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="6">
                            <Label Foreground="DimGray" Content="Actual Effort (hrs)" x:Name="ActualEffort" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="7">
                            <Label Foreground="DimGray" Content="Weekly Effort (hrs)" x:Name="WeeklyEffort" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="8">
                            <Label Foreground="DimGray" Content="Phase *" x:Name="Phase"  VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="9">
                            <Label Foreground="DimGray" Content="Remarks" x:Name="Remarks" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".2*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1">
                            <TextBox IsReadOnly="True" Template="{DynamicResource TextBoxBaseControlTemplate}"
                                 Margin="0,10"
                                 x:Name="txtEmpID"
                                 Text="{Binding NewTasks.EmpId, Mode=TwoWay}"/>
                            <TextBox  Margin="0,10" IsReadOnly="True" Template="{DynamicResource TextBoxBaseControlTemplate}"
                                 Visibility="Hidden"
                                 Text="{Binding NewTasks.TaskId, Mode=TwoWay}" 
                                 x:Name="txtTaskID"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <TextBox  Margin="0,10" Text="{Binding NewTasks.IncId, Mode=TwoWay}" Template="{DynamicResource TextBoxBaseControlTemplate}"
                                 x:Name="txtIncID"/>
                        </Grid>
                        <Grid Grid.Row="3">
                            <TextBox  Margin="0,10" Text="{Binding NewTasks.IncDescr, Mode=TwoWay}" Template="{DynamicResource TextBoxBaseControlTemplate}"
                                 x:Name="txtIncDescr"/>
                        </Grid>
                        <Grid Grid.Row="5">
                            <TextBox  Margin="0,10" Text="{Binding NewTasks.EffortEst, Mode=TwoWay}" Template="{DynamicResource TextBoxBaseControlTemplate}" x:Name="txtEffortEst"/>
                        </Grid>
                        <Grid Grid.Row="6">
                            <TextBox  Margin="0,10" Text="{Binding NewTasks.ActEffortEst, Mode=TwoWay}"
                                 Template="{DynamicResource TextBoxBaseControlTemplate}" x:Name="txtActualEffortEst"/>
                        </Grid>
                        <Grid Grid.Row="7">
                            <TextBox  Margin="0,10" Text="{Binding NewTasks.ActEffortEstWk, Mode=TwoWay}"
                                 Template="{DynamicResource TextBoxBaseControlTemplate}" x:Name="txtActualEfforEstWk"/>
                        </Grid>

                        <Grid Grid.Row="8">
                            <ComboBox SelectedValue="{Binding NewTasks.Phase, Mode=TwoWay}"
                                  ItemsSource="{Binding Path=PhaseStatusList}" 
                                  DisplayMemberPath="Value" 
                                  SelectedValuePath="Key"
                                   Margin="0,10"
                                 x:Name="cbPhase"/>
                        </Grid>
                        <Grid Grid.Row="9">
                            <TextBox Margin="0,10" Text="{Binding NewTasks.Remarks, Mode=TwoWay}"
                                 Template="{DynamicResource TextBoxBaseControlTemplate}" x:Name="txtRemarks"/>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Column="1" Margin="10,0,30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".2*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Label Foreground="DimGray" Content="Category *" x:Name="Category" VerticalAlignment="Center" />
                        </Grid>
                        <Grid Grid.Row="2">
                            <Label Foreground="DimGray" Content="Project Name *" x:Name="Project" VerticalAlignment="Center" />
                        </Grid>
                        <Grid Grid.Row="3">
                            <Label  Foreground="DimGray" Content="Rework" x:Name="Rework" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="5">
                            <Label Foreground="DimGray" Content="Status *" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="6">
                            <Label Foreground="DimGray" Content="Start Date *" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="7">
                            <Label Foreground="DimGray" Content="Target Date" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Row="8">
                            <Label Foreground="DimGray" Content="Completed Date" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".2*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="1">
                            <ComboBox SelectedValue="{Binding NewTasks.TaskType, Mode=TwoWay}"
                                  ItemsSource="{Binding Path=CategoryStatusList}" 
                                  DisplayMemberPath="Value"
                                  SelectedValuePath="Key"
                                  Margin="0,10"
                                  x:Name="cbCategory"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <ComboBox Name="cboProject"
                                  SelectedValue="{Binding NewTasks.ProjId, Mode=TwoWay}"
                                  ItemsSource="{Binding Path=ProjectList}" 
                                  DisplayMemberPath="ProjectName"
                                  SelectedValuePath="ProjectID"
                                  Margin="0,10"/>
                        </Grid>
                        <Grid Grid.Row="3">
                            <ComboBox SelectedValue="{Binding NewTasks.Rework, Mode=TwoWay}"
                                  ItemsSource="{Binding Path=ReworkStatusList}" 
                                  DisplayMemberPath="Value" 
                                  SelectedValuePath="Key"
                                  Margin="0,10"
                                  x:Name="cbRework"/>
                        </Grid>
                        <Grid Grid.Row="5">
                            <ComboBox  SelectedValue="{Binding NewTasks.Status, Mode=TwoWay}"
                                   ItemsSource="{Binding Path=TaskStatusList}" 
                                   DisplayMemberPath="Value"
                                   SelectedValuePath="Key"
                                   Margin="0,10"
                                 x:Name="cbStatus"/>
                        </Grid>
                        <Grid Grid.Row="6">
                            <DatePicker  Margin="0,10" SelectedDate="{x:Static sys:DateTime.Now}"
                                    Name="dpStartDate" IsEnabled="False">
                                <DatePicker.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="VerticalAlignment" Value="Top"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Grid>
                        <Grid Grid.Row="7">
                            <DatePicker  Margin="0,10" SelectedDate="{Binding NewTasks.TargetDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Name="dpTargetDate">
                                <DatePicker.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="VerticalAlignment" Value="Top"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Grid>
                        <Grid Grid.Row="8">
                            <DatePicker  Margin="0,10" SelectedDate="{Binding NewTasks.CompltdDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Name="dpCompltdDate">
                                <DatePicker.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="VerticalAlignment" Value="Top"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Grid>
                        <Grid Grid.Row="9">
                            
                                <Button x:Name="btnCreate" Margin="0,10" HorizontalContentAlignment="Stretch" Style="{DynamicResource RoundCorner}" Content="Create" />
                            <Button x:Name="btnUpdate"  Margin="0,10" Style="{DynamicResource RoundCornerUpdate}" Content="Update"/>
                                
                            
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
